# Voice Orchestrator - Environment Configuration
# Copy this file to .env and update values for your environment

# ============================================================================
# Flask Configuration
# ============================================================================
FLASK_ENV=development
# Options: development, production, testing

# ============================================================================
# Application Settings
# ============================================================================
PORT=6500
HOST=0.0.0.0

# ============================================================================
# Security
# ============================================================================
# IMPORTANT: Generate a secure secret key for production
# Generate with: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-in-production

# ============================================================================
# Challenge Settings
# ============================================================================
CHALLENGE_EXPIRY_SECONDS=60
MAX_ATTEMPTS=3

# ============================================================================
# Home Assistant Integration
# ============================================================================
HA_URL=http://homeassistant.local:8123
HA_WEBHOOK_ID=voice_auth_scene
TEST_MODE=true
# Set to false in production to actually call Home Assistant

# ============================================================================
# FutureProof Homes Integration
# ============================================================================
FUTUREPROOFHOME_ENABLED=true
DEFAULT_HOME_ID=home_1
LOG_FPH_REQUESTS=true

# ============================================================================
# Database Configuration (Phase 7)
# ============================================================================
USE_DATABASE=false
# Set to true to use PostgreSQL instead of in-memory storage

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# Example: postgresql://voiceorch:password@localhost:5432/voice_orchestrator
DATABASE_URL=

# ============================================================================
# Redis Configuration (Phase 7)
# ============================================================================
# Redis connection string
# Format: redis://[:password@]host:port/db
# Example: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_REQUEST_BODY=false
# Log full request bodies (disable in production for security)

LOG_RESPONSE_BODY=false
# Log full response bodies (disable in production for security)

# ============================================================================
# Digital Ocean Production Configuration (Phase 10)
# ============================================================================
# Uncomment and configure for Digital Ocean deployment

